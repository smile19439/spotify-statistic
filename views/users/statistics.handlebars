<div class="d-flex mb-2 align-items-center">
  <img src="{{checkAvatar user.avatar}}" class="rounded-circle border" style="width: 10%;">
  <div class="ms-3">
    <h3>{{user.name}}</h3>
    {{#ifCond user.spotifyId loginUser.spotifyId}}
    <a href="/user/{{../loginUser.spotifyId}}/playlist">
      <button class="btn btn-outline-success">
        我的點歌本
      </button>
    </a>
    {{/ifCond}}
  </div>
</div>

<div>
  <nav class="navbar navbar-expand-lg bg-light">
    <div class="container-fluid">
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <a class="nav-link {{#ifCond time_range 'short_term'}}active{{/ifCond}}"
            href="/user/{{user.spotifyId}}/statistics?time_range=short_term">過去四週</a>
          <a class="nav-link {{#ifCond time_range 'medium_term'}}active{{/ifCond}}"
            href="/user/{{user.spotifyId}}/statistics?time_range=medium_term">過去半年</a>
          <a class="nav-link {{#ifCond time_range 'long_term'}}active{{/ifCond}}"
            href="/user/{{user.spotifyId}}/statistics?time_range=long_term">所有紀錄</a>
        </div>
      </div>
    </div>
  </nav>

  {{> track-table tracks = topTracks}}
</div>