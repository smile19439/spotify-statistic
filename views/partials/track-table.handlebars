<table class="table">
  <thead style="position: sticky; top: 0; background-color: white;">
    <tr>
      <th scope="col">#</th>
      <th scope="col">歌名</th>
      <th scope="col">歌手/團體</th>
      <th scope="col">專輯</th>
    </tr>
  </thead>
  <tbody>
    {{#each tracks}}
      <tr>
        <th scope="row">{{this.index}}</th>
        <td>{{this.name}}</td>
        <td>{{this.artist}}</td>
        <td>{{this.album}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>