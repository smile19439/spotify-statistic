<nav aria-label="Page navigation example">
  <ul class="pagination  justify-content-center">
    <li class="page-item {{#ifCond pagination.currentPage pagination.prePage}}disabled{{/ifCond}}">
      <a class="page-link" href="?page={{pagination.prePage}}" aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
      </a>
    </li>
    {{#each pagination.pages}}
      <li class="page-item {{#ifCond ../pagination.currentPage this}}active{{/ifCond}}">
        <a class="page-link" href="?page={{this}}">{{this}}</a>
      </li>
    {{/each}}
    <li class="page-item {{#ifCond pagination.currentPage pagination.nextPage}}disabled{{/ifCond}}">
      <a class="page-link" href="?page={{pagination.nextPage}}" aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
      </a>
    </li>
  </ul>
</nav>