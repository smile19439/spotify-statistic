<h1 class="text-center mb-3">{{user.name}}的點歌本</h1>

<div class="row">
  <div class="col-6">
    {{> track-table}}
  </div>

  <div class="col-6">
    <form id="search-form" class="row">
      <div class="col-3">
        <select class="form-select" id="search-select">
          <option value="track">依歌名</option>
          <option value="artist">依歌手/團體</option>
          <option value="album">依專輯</option>
        </select>
      </div>
      <div class="col-7">
        <input type="text" class="form-control" id="search-input">
      </div>
      <div class="col-2">
        <button type="submit" id="search-btn" class="btn btn-outline-primary">查詢</button>
      </div>
    </form>

    {{!-- 搜尋結果 --}}
    <ul id=""></ul>
  </div>
</div>